<%= form_for(restaurant) do |f| %>
 <div class="container">
    <div class="form-group form-control-lg">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group form-control-lg">
      <%= f.label :category %>
      <%= f.text_field :category %>
    </div>
    <div class="form-group form-control-lg">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
    <div class="form-group form-control-lg">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
    </div>
      <%= f.submit %>
  </div>
<% end %>

