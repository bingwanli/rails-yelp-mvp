
<div class="container m-auto p-3">
  <h1 class="">All Restaurants</h1>
    <% @restaurants.each do |r| %>
     <div class="card mb-3 w-75 m-auto p-3">
      <img src="https://images.pexels.com/photos/2232/vegetables-italian-pizza-restaurant.jpg?auto=compress&cs=tinysrgb&dpr=2&w=500" class="card-img-top" alt=<%=r.category %>>
      <div class="card-body">
        <h5 class="card-title"><%= r.name %></h5>
        <p class="card-text"><%= r.category %>
          <br><%= r.phone_number %>
          <br><%= r.address %>
        </p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
    <% end %>
</div>


